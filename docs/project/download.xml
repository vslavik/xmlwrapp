<?xml version="1.0"?>
<download 
    xmlns="http://pmade.org/xmlns/project-download"
    xmlns:l="http://pmade.org/xmlns/project-linking"
    directory="somedir">

    <requirements>
	<list title="Build Requirements">
	    <item>Perl (at least version 5.5) to run configure.pl</item>
	    <item>libxml2 from <l:ulink href="http://xmlsoft.org/">xmlsoft.org</l:ulink></item>
	    <item>libxslt from <l:ulink href="http://xmlsoft.org/XSLT/">xmlsoft.org</l:ulink> (optional)</item>
	    <item>A compiler that supports most of ISO 14882-1998</item>
	</list>
    </requirements>

	<ostable>
	    <os name="FreeBSD" hardware="IA32" version="3.0">
		<compiler name="GCC 2.95.3"		status="Supported"/>
		<compiler name="GCC 2.95.4 20020320"	status="Supported"/>
		<compiler name="GCC 3.0.4"		status="Supported"/>
		<compiler name="GCC 3.1.1"		status="Supported"/>
		<compiler name="GCC 3.2.1"		status="Supported"/>
		<compiler name="GCC 3.3"		status="Supported"/>
	    </os>

	    <os name="Linux (RedHat, Debian)" hardware="IA32" version="N/A">
		<compiler name="GCC 2.95.3"		status="Supported"/>
		<compiler name="GCC 3.0.4"		status="Supported"/>
		<compiler name="GCC 3.1.1"		status="Supported"/>
		<compiler name="GCC 3.2.1"		status="Supported"/>
		<compiler name="GCC 3.3"		status="Supported"/>
	    </os>

	    <os name="Solaris" hardware="SPARC" version="2.7">
		<compiler name="Sun Forte C++"		status="Not Supported"	    notes="Very buggy compiler">
		    <notes>
			Known bugs in this compiler cause the xmlwrapp test suite to fail in the event parser tests. These test
			will probably pass if you are using a patched version of this compiler. YMMV.
		    </notes>
		</compiler>

		<compiler name="GCC 2.95.3"		status="Supported"/>
		<compiler name="GCC 3.0.4"		status="Supported"/>
		<compiler name="GCC 3.1.1"		status="Supported"/>
		<compiler name="GCC 3.2.1"		status="Supported"/>
		<compiler name="GCC 3.2.1 w/ -m64"	status="Supported"	    notes="64bit library generated"/>
		<compiler name="GCC 3.3"		status="Supported"/>
		<compiler name="GCC 3.3 w/ -m64"	status="Supported"	    notes="64bit library generated"/>
	    </os>

	    <os name="MacOS X" hardware="PowerPC" version="10.1">
		<compiler name="Apple gcc-934.3"	status="Supported"/>
		<compiler name="Apple gcc-937.2"	status="Supported"/>
		<compiler name="Apple gcc-1041"		status="Not Supported"	    notes="Broken Compiler">
		    <notes>
			This is a beta version of what became GCC 3.1. It contains bugs, including problems with exceptions. When
			you throw an exception the code will continue right after the throw statement.
		    </notes>
		</compiler>
		<compiler name="Apple gcc-1175"		status="Supported"/>
	    </os>

	    <os name="Win32" hardware="IA32" version="N/A">
		<compiler name="MSVS 6.0"	    status="Supported"		    notes="Use the STLport">
		    <notes>
			In order to compile and use xmlwrapp with this compiler, you will need to download and install the free
			<l:ulink href="http://stlport.org/">STLport</l:ulink> standard libary implementation. You may also choose
			to use another standard library implementation as well.
		    </notes>
		</compiler>

		<compiler name="MSVS .NET"	    status="Not Supported"	    notes="Not tested"/>
	    </os>
	</ostable>
</download>
